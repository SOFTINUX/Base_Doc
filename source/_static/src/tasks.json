{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/SampleApi/SampleApi.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/SampleApi/SampleApi.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "dependsOrder": "sequence",
            "dependsOn":[
                "build"
            ],
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/SampleApi/bin/Debug/netcoreapp2.2/WebApplication.dll"
            ],
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}